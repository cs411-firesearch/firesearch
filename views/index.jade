extends layout

block body
  div(ng-controller='StatusController')
    div(class="navbar1")
      nav(class="navbar navbar-default")
        div(class="container-fluid col-md-10 col-md-offset-1")
          div(class="navbar-header")
            a(class="navbar-brand") Firesearch
          div(class="collapse navbar-collapse")
            ul(class='nav nav-tabs navbar-left')
              li(class='active')
                a(href='/') Home
              li
                a(href='/myPort') My Portfolio
              li
                a(href='/recommend') Recommendations
              li
                a(href='searchStock') Search Stock
            ul(class="nav navbar-nav navbar-right" ng-hide='user.UserId')
              li
                a(href='/loginpage') Login
              li
                a(href='/signup') Signup
            ul(class="nav navbar-nav navbar-right" ng-show='user.UserId')
              li(class="dropdown")
                a(class="dropdown-toggle" data-toggle="dropdown" id="username") Welcome, {{user.Username}}
                  b(class="caret")
                ul(class="dropdown-menu")
                  li
                    a(href='/myPort') My Account
                  li
                    a(ng-click="logout()") Logout
    meta(charset="UTF-8")
    div(class='col-md-10 col-md-offset-1')
      div(ng-view)

  script(src='js/lib/jquery/jquery-1.11.2.min.js')
  script(src='js/nav.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
  script(src="http://d3js.org/d3.v3.min.js")
  script(src='js/lib/angular/angular.min.js')
  script(src='js/lib/angular/angular-route.min.js')
  script(src='js/lib/angular/angular-cookies.min.js')
  script(src='js/app.js')
  script(src='js/d3js/lineChart.js')
  script(src='js/d3js/barChart.js')
  script(src='js/controllers.js')
  script(src='js/status.js')
  script(src='js/utils.js')
  script(src='js/authentication.js')
